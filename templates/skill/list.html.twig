{% extends 'base.html.twig' %} {% block title %}Skills{% endblock %} {% block
body %}
<main>
  <h2>Liste des Comp√©tences</h2>
    <div class="content">
    <a href="{{ path('app_skill_createSkillGroup') }}"
      ><div class="buttonadd">
        Ajouter un skill<i class="fa-sharp fa-solid fa-plus"></i></div
    ></a>
  </div>
  {% for skill in skills %}
  <div class="content">
    <table>
      <tr>
        <th colspan="5">
          {{ skill.code }}
          <a href="{{ path('app_skill_createWithId', { id: skill.id }) }}"
            ><i class="fa-sharp fa-solid fa-plus"></i
          ></a>
        </th>
        <th colspan="1">Action</th>
        <th colspan="2">Action</th>
      </tr>

      {% for skillUser in skill.skills %}

      <tr>
        <td colspan="5">{{ skillUser.label }}</td>
        <td>
          <a href="{{ path('app_skill_delete', { id: skillUser.id }) }}">
            <div class="delete"><i class="fa-sharp fa-solid fa-trash"></i></div
          ></a>
        </td>
        <td>
          <div class="edit"><i class="fa-sharp fa-solid fa-pen"></i></div>
        </td>
      </tr>
      {%endfor%}
    </table>
  </div>
  {%endfor%}


</main>
{% endblock %}
